        app:title_text="@string/security_measures"
        app:title_text_color="@android:color/black"
        app:title_font="@font/proxima_nova_regular"
        app:underline_link="true"
        app:content_font="@font/proxima_nova_regular"
        app:bg_drawable_regular="@drawable/bg_dropdown_text_view_regular"
        app:bg_drawable_expanded="@drawable/bg_dropdown_text_view_expanded"
        app:panel_padding="10dp"/>

    <hakobastvatsatryan.DropdownTextView
        android:id="@+id/organism_breeding"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
